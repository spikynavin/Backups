/dts-v1/;

#include "imx6q_iwg15.dtsi"
#include "imx6qdl-iwg15m-q7.dtsi"

/ {
	model = "iWave RainboW-G15M-Q7 Board with PMIC based on Freescale i.MX6 Quad/Dual";
	compatible = "iw,qd_iwg15m_q7_pmic", "fsl,imx6q";
};

/*&mxcfb3 {
	status = "okay";
};

&mxcfb4 {
	status = "okay";
};*/

&mxcfb1 {
        status = "okay";
};

&mxcfb2 {
        status = "okay";
};

&sata {
	sata-act-gpios = <&gpio4 10 1>;
	status = "okay";
};

&v4l2_cap_1 {
        ipu_id = <1>;
};

&iomuxc {
        pinctrl-names = "default";
        pinctrl-0 = <&pinctrl_hog_q7_1>;
};

&uart5 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_uart5_1>;
	fsl,uart-has-rtscts;
	status = "okay";
};

&ldb {
	lvds-channel@1 {
		fsl,data-mapping = "spwg";
		fsl,data-width = <24>;/*18*/
		crtc = "ipu2-di1";
		status = "okay";

		display-timings {
			native-mode = <&timing1>;
			timing1: ldb-wvga {
				 clock-frequency = <178900000>;/*89400000*//*148500000*/
                                hactive = <1920>;
                                vactive = <720>;
                                hback-porch = <656>;/*96*/
                                hfront-porch = <120>;/*30*/
                                vback-porch = <35>;/*3*/
                                vfront-porch = <1>;/*3*/
                                hsync-len = <2>;
                                vsync-len = <2>;
			};
		};
	};
};

&unused_gpios {
	gpios = <&gpio1 2 0  &gpio1 3 0   &gpio1 4 0   &gpio1 5 0
		&gpio1 6 0   &gpio2 23 0  &gpio2 26 0  &gpio2 28 0
		&gpio2 29 0  &gpio3 0 0   &gpio3 1 0   &gpio3 2 0
		&gpio3 3 0   &gpio3 4 0   &gpio3 5 0   &gpio3 6 0
		&gpio3 7 0   &gpio3 8 0   &gpio3 9 0   &gpio3 10 0  
		&gpio3 11 0  &gpio3 12 0  &gpio3 13 0  &gpio3 14 0  
		&gpio3 15 0  &gpio3 22 0  &gpio4 5 0   &gpio4 6 0
		&gpio4 7 0   &gpio4 16 0  &gpio4 17 0  &gpio4 18 0
		&gpio4 19 0  &gpio4 20 0  &gpio4 22 0  &gpio4 24 0  
		&gpio4 25 0  &gpio4 26 0  &gpio4 27 0  &gpio4 28 0  
		&gpio4 30 0  &gpio4 31 0  &gpio6 31 0  &gpio5 8 0   
		&gpio5 10 0  &gpio5 11 0  &gpio5 12 0  &gpio5 13 0  
		&gpio5 14 0  &gpio5 15 0  &gpio5 16 0  &gpio5 17 0  
		&gpio5 18 0  &gpio5 19 0  &gpio5 20 0  &gpio5 21 0  
		&gpio5 22 0  &gpio5 23 0  &gpio5 24 0  &gpio5 25 0  
		&gpio5 30 0  &gpio5 31 0  &gpio6 0 0   &gpio6 1 0   
		&gpio6 2 0   &gpio6 3 0   &gpio6 4 0   &gpio6 5 0   
		&gpio6 15 0 >;
};

&gpc {
        fsl,ldo-bypass = <0>; /* use ldo-bypass, u-boot will check it and configure */
};

&i2c2 {
	pmic: pfuze100@08 {
		compatible = "fsl,pfuze100";
		reg = <0x08>;

		regulators {
			sw1a_reg: sw1ab {
				regulator-min-microvolt = <300000>;
				regulator-max-microvolt = <1875000>;
				regulator-boot-on;
				regulator-always-on;
				regulator-ramp-delay = <6250>;
			};

			sw1c_reg: sw1c {
				regulator-min-microvolt = <300000>;
				regulator-max-microvolt = <1875000>;
				regulator-boot-on;
				regulator-always-on;
				regulator-ramp-delay = <6250>;
			};

			sw2_reg: sw2 {
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <3300000>;
				regulator-boot-on;
				regulator-always-on;
			};

			sw3a_reg: sw3a {
				regulator-min-microvolt = <400000>;
				regulator-max-microvolt = <1975000>;
				regulator-boot-on;
				regulator-always-on;
			};

			sw3b_reg: sw3b {
				regulator-min-microvolt = <400000>;
				regulator-max-microvolt = <1975000>;
				regulator-boot-on;
				regulator-always-on;
			};

			sw4_reg: sw4 {
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <3300000>;
			};

			snvs_reg: vsnvs {
				regulator-min-microvolt = <1000000>;
				regulator-max-microvolt = <3000000>;
				regulator-boot-on;
				regulator-always-on;
			};

			vref_reg: vrefddr {
				regulator-boot-on;
				regulator-always-on;
			};

			vgen4_reg: vgen4 {
				regulator-min-microvolt = <1800000>;
				regulator-max-microvolt = <3300000>;
				regulator-always-on;
			};

			vgen5_reg: vgen5 {
				regulator-min-microvolt = <1800000>;
				regulator-max-microvolt = <3300000>;
				regulator-always-on;
			};

		};
	};
};
